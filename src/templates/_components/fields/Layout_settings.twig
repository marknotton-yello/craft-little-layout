<div
  data-little-layout="{{ namespacedId }}"
  data-field-type="settings"
  data-clearable="{{ field.clearable }}"
  data-cols="{{ field.cols }}"
  data-default-value="{{ field.defaultValue }}"
  data-rows="{{ field.rows }}"
  data-selection-mode="{{ field.selectionMode }}"
></div>

<input data-little-layout-placeholder="{{ namespacedId }}" type="hidden" name="defaultValue" autofocus="" autocomplete="off" value="{{ field.defaultValue }}">

{% do craft.app.view.registerJs(registerJs) %}